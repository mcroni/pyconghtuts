
#:import MDBottomNavigation kivymd.tabs.MDBottomNavigation
#:import MDBottomNavigationItem kivymd.tabs.MDBottomNavigationItem
#:import MDTextField kivymd.textfields.MDTextField


<Interface>:
#    spinner:spinner
    id:interface
    MDBottomNavigation:
        id: bottom_navigation_demo
        MDBottomNavigationItem:
            name: 'octagon'
            text: "pyJokes"
            icon: "face"
            MDLabel:
                font_style: 'Body1'
                theme_text_color: 'Primary'
                text: "Warning!"
                halign: 'center'
            Image:
                source:'./assets/pyjokes.png'
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                size_hint: 0.7, None
                height: dp(500)


            FloatLayout:
                MDIconButton:
                    icon: 'emoticon-excited'
                    id:get_a_joke
                    pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                    size_hint: 0.8, None
                    height: dp(48)
                    on_press: root.get_joke()
                MDLabel:
                    id: get_a_joke_text
                    font_style: 'Body1'
                    theme_text_color: 'Primary'
                    text: "Tap on the Happy Face for A joke"
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1] + dp(4)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.9}

                MDFloatingActionButton:
                    id:chevron_up
                    icon: 'share-variant'
                    opacity: 0.9
                    pos_hint:  {'center_x': 0.8, 'center_y': 0.1}
                    size_hint: None, None
                    size: dp(55), dp(55)
                    on_press:root.share()



        MDBottomNavigationItem:
            name: 'banking'
            text: "TODO"
            icon: 'pen'
            FloatLayout:

                ScrollView:
                    id:scroll
                    do_scroll_x:False
                    MDList:
                        id: todo_list


                MDFloatingActionButton:
                    id:chevron_up
                    icon: 'comment-plus-outline'
                    opacity: 0.9
                    pos_hint:  {'center_x': 0.78, 'center_y': 0.1}
                    size_hint: None, None
                    size: dp(45), dp(45)
                    on_press:root.open_modal()

                MDFloatingActionButton:
                    id:chevron_up
                    icon: 'refresh'
                    opacity: 0.9
                    pos_hint:  {'center_x': 0.78, 'center_y': 0.2}
                    size_hint: None, None
                    size: dp(35), dp(35)
                    on_press:root.refresh()

                MDSpinner:
                    id: spinner
                    size_hint: None, None
                    size: dp(46), dp(46)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                    active: False


<LoadDialog>:
    size_hint: .8,None
    height: dp(200)
    background: "./assets/rss_back.png"
#    FloatLayout:
    BoxLayout:
        orientation:"vertical"
        MDTextField:
            id: add_new_note
            color_mode: 'accent'
            hint_text: "Add a new item"
            required: True
        MDRaisedButton:
            id: add_note_button
            text: "add note"
            opposite_colors:True
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_press: root.add()
